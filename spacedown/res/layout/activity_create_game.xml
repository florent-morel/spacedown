        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_alignTop="@+id/editCreateTeam" -->
        <!-- android:layout_toRightOf="@+id/buttonNewGame" -->
        <!-- android:text="+" /> -->

        <CheckBox
            android:id="@+id/checkBoxDebugMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView01"
            android:layout_below="@+id/TextView01"
            android:text="@string/create_game_debug_mode" />

        <Button
            android:id="@+id/buttonNewGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView01"
            android:layout_below="@+id/checkBoxDebugMode"
            android:layout_marginTop="37dp"
            android:text="@string/create_game" />

        <Button
            android:id="@+id/buttonContinueGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxDebugMode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:layout_toRightOf="@+id/buttonNewGame"
            android:text="@string/continue_game" />
    </RelativeLayout>

</ScrollView>